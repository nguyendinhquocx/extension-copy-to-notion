{
  "name": "copy-to-notion-extension",
  "version": "1.0.0",
  "description": "Browser extension để copy content vào Notion với thiết kế tối giản",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "build:extension": "npm run build && npm run package",
    "package": "node scripts/package.js"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@notionhq/client": "^2.2.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/chrome": "^0.0.268",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@crxjs/vite-plugin": "^2.0.0-beta.23",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vitest": "^1.4.0"
  },
  "keywords": [
    "notion",
    "browser-extension",
    "productivity",
    "content-capture",
    "vietnamese"
  ],
  "author": "Vietnamese Developer",
  "license": "MIT",
  "homepage": "https://github.com/nguyendinhquocx/extension-copy-to-notion",
  "repository": {
    "type": "git",
    "url": "https://github.com/nguyendinhquocx/extension-copy-to-notion.git"
  },
  "bugs": {
    "url": "https://github.com/nguyendinhquocx/extension-copy-to-notion/issues"
  }
}
